<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReservasColegio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/js/bootstrap.min.js" />
    <link rel="stylesheet" href="~/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ReservasColegio.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" />
</head>
<body style="height: 100vh; margin: 0; display: flex; flex-direction: column;">
    <section style="flex: 1; display: flex; flex-direction: row; overflow: auto;">
        <partial name="_NavMenu" />

        <div class="container" style="flex: 1; display: flex; flex-direction: column;">
            <main role="main" class="pb-3" style="flex: 1;">
                @RenderBody()
            </main>
        </div>
    </section>

    <footer class="border-top footer text-muted" style="position:static!important;">
        <div class="container">
            &copy; 2025 - ReservasColegio
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
